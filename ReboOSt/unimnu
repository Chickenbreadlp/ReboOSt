if login then

local diskiconactiv = false
keepmenu = false
local deskback = true

function DrawMenu()
term.setCursorPos(1,1)
term.setBackgroundColor(body)
term.setTextColor(bodytxt)
print(OStag)
print("Panels      >")
print("Programs    >")
write("Time        ")
if fs.exists("/ReboOSt/time") then print(" ") else print("!") end
write("Shell       ")
if fs.exists("/ReboOSt/shell") then print(" ") else print("!") end
print(" ----------- ")
print("Logout       ")
print("Reboot       ")
print("Shutdown     ")
end

local function menuundo()
 term.setCursorPos(1,1)
 term.setBackgroundColor(tbar)
 term.setTextColor(sndtxt)
 print(OStag)
 term.setTextColor(tbartxt)
 paintutils.drawImage(Wallpaper,1,2)
 if fs.exists("/disk") then
  paintutils.drawImage(disklogo,2,4)
  term.setCursorPos(2,8)
  term.setBackgroundColor(mbar)
  term.setTextColor(mbartxt)
  print("Disk")
  diskiconactiv = true
 else
  if diskiconactiv then
   paintutils.drawImage(Wallpaper,1,2)
  end
 end
end

DrawMenu()

while true do
local event, button, X, Y = os.pullEvent("mouse_click")
XY = X..","..Y

 -- System

if X >= 1 and X < 14 and Y == 2 then
 if rosloging then
  roslog.writeLine(shell.getRunningProgram()..": opening sys menu")
 end
 shell.run("/ReboOSt/sysmnu")
 if keepmenu == true then DrawMenu() else menuundo() break end

 -- Programs

elseif X >= 1 and X < 14 and Y == 3 then
 if rosloging then
  roslog.writeLine(shell.getRunningProgram()..": opening prog menu")
 end
 shell.run("/ReboOSt/progmnu")
 if keepmenu == true then DrawMenu() else menuundo() break end

 -- Time

elseif X >= 1 and X < 14 and Y == 4 then
 menuundo()
 if rosloging then
  roslog.writeLine(shell.getRunningProgram()..": executing: /ReboOSt/time")
 end
 shell.run("/ReboOSt/time")
 break

 -- Shell

elseif X >= 1 and X < 14 and Y == 5 then
 if rosloging then
  roslog.writeLine(shell.getRunningProgram()..": executing: /ReboOSt/shell")
 end
 shell.run("/ReboOSt/shell")
 menuundo()
 break

 -- Logoff

elseif X >= 1 and X < 14 and Y == 7 then
 menuundo()
 if rosloging then
  roslog.writeLine("Loging "..UserName.." off")
 end
 term.setBackgroundColor(tbar)
 term.setTextColor(sndtxt)
 term.setCursorPos(1,8)
 print("                                                   ")
 term.setCursorPos(1,9)
 print("                    Logging off                    ")
 term.setCursorPos(1,10)
 print("                                                   ")
 sleep(0.5)
 login = false
 break

 -- Reboot

elseif X >= 1 and X < 14 and Y == 8 then
 menuundo()
 shell.run("/ReboOSt/reboot")
 break

 -- Shutdown

elseif X >= 1 and X < 14 and Y == 9 then
 menuundo()
 shell.run("/ReboOSt/shut-off")
 break

 -- Go back

else
if rosloging then
 roslog.writeLine(shell.getRunningProgram()..": going back to mainframe")
end
break
end end
else
 term.setTextColor(16384)
 term.setBackgroundColor(32768)
 print("You don't even have ReboOSt started!")
 term.setTextColor(1)
end
