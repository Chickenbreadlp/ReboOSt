if XY == "33,6" and button == 1 then body = colors.lime bodytxt = colors.white changes = true thmchg() end -- body lime
if XY == "34,6" and button == 1 then body = colors.pink bodytxt = colors.white changes = true thmchg() end -- body pink
if XY == "35,6" and button == 1 then body = colors.brown bodytxt = colors.white changes = true thmchg() end -- body brown

 -- buttons
if X >= 21 and X <= 27 and Y == 7 and buttonBack == colors.lime and button == 1 then buttonBack = colors.lightGray buttonReboot = colors.gray buttonShut = colors.black buttonColor = false changes = true thmchg() -- Uncolor
elseif X >= 21 and X <= 27 and Y == 7 and buttonBack == colors.lightGray and button == 1 then buttonBack = colors.lime buttonReboot = colors.orange buttonShut = colors.red buttonColor = true changes = true thmchg() end -- Recolor

