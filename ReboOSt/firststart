if XY == "25,6" and button == 1 then body = colors.orange bodytxt = colors.white changes = true thmchg() end -- body orange
if XY == "26,6" and button == 1 then body = colors.red bodytxt = colors.white changes = true thmchg() end -- body red
if XY == "27,6" and button == 1 then body = colors.purple bodytxt = colors.white changes = true thmchg() end -- body purple
if XY == "28,6" and button == 1 then body = colors.magenta bodytxt = colors.white changes = true thmchg() end -- body magenta
if XY == "29,6" and button == 1 then body = colors.lightBlue bodytxt = colors.white changes = true thmchg() end -- body light blue
if XY == "30,6" and button == 1 then body = colors.cyan bodytxt = colors.white changes = true thmchg() end -- body cyan
