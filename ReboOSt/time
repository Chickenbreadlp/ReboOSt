local duration = 5

local function Clock()
local nTime = os.time()
term.setBackgroundColor(tbar)
term.setTextColor(tbartxt)
term.setCursorPos(1,2)
write(textutils.formatTime( nTime, true ).." for "..duration.." Seconds")
sleep(1)
end

if login then
while duration ~= 0 do
Clock()
duration = duration - 1
end

if rosloging then
 roslog.writeLine(shell.getRunningProgram()..": going back to mainframe")
end

else
 term.setTextColor(16384)
 term.setBackgroundColor(32768)
 print("You don't even have ReboOSt started!")
 term.setTextColor(1)
end
