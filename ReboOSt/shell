local oldpe = os.pullEvent()
local os.pullEvent = os.pullEventRaw()

term.setTextColor(updatPre)
term.setBackgroundColor(tbar)
print("RebOSt Shell   --   To go back enter Start")
while true do
 write("-> ")
 local name = read()
 print("")
 if name == "rm /ReboOSt/*" or name == "rm /ReboOSt" or name == "rm ReboOSt" or name == "rm reboost" or name == "rm *" or name == "rm Programs" then
  term.setTextColor(colors.red)
  print("Forbidden Command!")
 elseif name == "Start" or name == "START" or name == "start" then
  break
 else
  shell.run(name)
 end
end
