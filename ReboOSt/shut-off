local function Shutdown()
 term.setBackgroundColor(colors.gray)
 term.clear()
 term.setCursorPos(1,1)
 term.setBackgroundColor(colors.gray)
 term.setTextColor(colors.white)
 write("                      Rebo")
 term.setTextColor(colors.cyan)
 write("OS")
 term.setTextColor(colors.white)
 print("t                      ")
 print("                  is shuting down                  ")
 paintutils.drawImage(Logo,6,9)
 fs.delete("/ReboOSt/Temp")
 os.unloadAPI("encryption")
 sleep(0.7)
 os.shutdown()
end

if instashut then
 Shutdown()
else
if login then

term.setBackgroundColor(wico)
term.setTextColor(wicotxt)
term.setCursorPos(13,7)
print("Do you want to shutdown? ")
term.setBackgroundColor(wicotxt)
term.setTextColor(wico)
term.setCursorPos(13,8)
print("     Yes        No       ")
term.setCursorPos(13,9)
print("                         ")
term.setCursorPos(13,10)
print("     [X]        [X]      ")
term.setCursorPos(13,11)
print("                         ")

while true do
local event, button, X, Y = os.pullEvent("mouse_click")
XY = X..","..Y

 -- Yes

if XY == "19,10" and button == 1 then
 Shutdown()
break

 -- No

elseif XY == "30,10" and button == 1 then
break
end end

else
 term.setTextColor(16384)
 term.setBackgroundColor(32768)
 print("You don't even have ReboOSt started!")
 term.setTextColor(1)
end
end
