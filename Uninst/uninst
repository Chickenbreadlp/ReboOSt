term.setTextColor(1)
print("ReboOSt Uninstaller")
term.setTextColor(colors.cyan)
print("                                                   ")
print("You want to uninstall ApfelOS 1.0 Pro. This delete ")
print(" any Userdata inculded the Files in the Pictures   ")
print(" Folder.                                           ")
print(" ")
term.setCursorPos(19,8)
print("Are you sure?")
term.setCursorPos(5,11)
term.setBackgroundColor(colors.lightGray)
term.setTextColor(1)
print("                    ")
term.setCursorPos(5,12)
print("        Yes         ")
term.setCursorPos(5,13)
print("                    ")
term.setCursorPos(27,11)
print("                    ")
term.setCursorPos(27,12)
print("        No          ")
term.setCursorPos(27,13)
print("                    ")
term.setTextColor(1)

while true do
local event, button, X, Y = os.pullEvent("mouse_click")
XY = X..","..Y

if X >=5 and X <= 25 and Y >= 11 and Y <= 13 and button == 1 then
 term.setBackgroundColor(colors.gray)
 term.clear()
 term.setCursorPos(1,1)
 term.setTextColor(1)
 print("ReboOSt Uninstaller")
 term.setTextColor(colors.cyan)
 print("                                                   ")
 print("You want to uninstall ApfelOS 1.0 Pro. This delete ")
 print(" any Userdata inculded the Files in the Pictures   ")
 print(" Folder.                                           ")
 term.setCursorPos(1,18)
 term.setTextColor(16)
 print("              Preparing Uninstaller!               ")
 term.setTextColor(1)
 sleep(2.5)
 term.setBackgroundColor(colors.gray)
 term.clear()
 term.setCursorPos(1,1)
 term.setTextColor(1)
 print("ReboOSt Uninstaller")
 term.setTextColor(colors.cyan)
 print(" ")
 print("ReboOSt is now uninstalling")
 
 fs.delete("/ReboOSt")
 fs.delete("/User")
 fs.delete("/Programs")
 fs.delete("/startup")
 fs.delete("/Start")
 fs.delete("/Setup")
 term.setBackgroundColor(colors.gray)
 term.clear()
 term.setCursorPos(1,1)
 term.setTextColor(1)
 print("ReboOSt Uninstaller")
 term.setTextColor(colors.cyan)
 print(" ")
 print("ApfelOS is now uninstalled.                        ")
 print(" ")
 print("The system will be rebooting any second.           ")
 sleep(3)
 os.reboot()
break
end

if X >= 27 and X <= 47 and Y >= 11 and Y <= 13 and button == 1 then
 term.setBackgroundColor(colors.gray)
 term.clear()
 term.setCursorPos(1,1)
 term.setTextColor(colors.white)
 print("ReboOSt Installation")
 term.setTextColor(colors.cyan)
 print(" ")
 print("You'll go now back to the Menu!")
 sleep(2)
break
end end
